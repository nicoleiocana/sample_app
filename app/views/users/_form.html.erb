<%= form_for(@user, url: yield(:path)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control', placeholder: "First & last name" %>
  
  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control', placeholder: "Your email address" %>
  
  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control', placeholder: "Minimum of 5 characters" %>
  
  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Re-enter password" %>
  
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>